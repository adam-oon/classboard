<!doctype html>
<html lang="en">
    {{ template "script"}}
    <script>
        function deleteQuestion(event,id) {
            event.preventDefault();
            $('#responseMessage').html("");

            $.ajax({
                url: 'api/v1/classroom/'+id,
                type: 'delete',
                success: function (response) {
                    if (response != undefined) {
                        $('#responseMessage').html("<b style='color:green'>"+response.ResponseText+"</b>");
                    }
                    location.reload()
                },
                error: function (XMLHttpRequest, textStatus, errorThrown) {
                    $('#responseMessage').html("<b style='color:red'>"+XMLHttpRequest.responseJSON.ResponseText+"</b>");
                },
            });
        }
    </script>
    <head>
        <meta charset="UTF-8">
        <title>Welcome to the ClassBoard</title>
    </head>

    <body style="text-align: center;">

        <h1><u>ClassBoard Dashboard</u></h1>
        <div id="responseMessage"></div><br/>

        {{if .}}
        <a href="question/add"><i>Add new question</i></a>
        <table style="margin-left:auto;margin-right:auto">
            <tr>
                <th>No.</th>
                <th>Question</th>
                <th colspan="2">Action</th>
                <th></th>

            </tr>
            {{range $key, $val := .}}
            <tr>
                <td>{{inc $key 1}}</td>
                <td>{{$val.Question}}</td>
                <td>&nbsp;<a href="/classroom/{{$val.Id}}/question"><i>Detail</i></a>&nbsp;</td>
                <td>&nbsp;<a href="/classroom/{{$val.Id}}/question" onclick="deleteQuestion(event,{{$val.Id}})"><i>Delete</i></a>&nbsp;</td>
            </tr>
            {{end}}
        </table>
        {{else}}
        <h4>There is no question here! Please <a href="question/add">add a question</a> first!</h4>
        {{end}}

        {{template "bottom_nav"}}
    </body>
</html>